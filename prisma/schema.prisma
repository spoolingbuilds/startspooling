generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WaitlistSignup {
  id                      String    @id @default(cuid())
  email                   String    @unique
  verificationCode        String
  verificationAttempts    Int       @default(0)
  lockedUntil             DateTime?
  isVerified              Boolean   @default(false)
  verifiedAt              DateTime?
  welcomeMessageId        Int?
  welcomeMessageText      String?
  calculatedNumber        Int?
  browserClient           String
  ipAddress               String
  spoolTag                String    @default("Spool_PL")
  referralSource          String?
  reregistrationCount     Int       @default(0) // Track how many times email is re-registered
  lastVerificationIp      String?   // IP address of last verification
  lastVerificationTimestamp DateTime? // Timestamp of last verification
  codeReverificationCount Int       @default(0) // Track how many times same code is verified
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  @@map("waitlist_signups")
  @@index([lockedUntil])
  @@index([email, isVerified]) // Composite index for verification queries
  @@index([ipAddress, createdAt]) // Composite index for rate limiting
  @@index([lastVerificationIp, lastVerificationTimestamp]) // Index for verification tracking
}

model VerificationAttempt {
  id            String   @id @default(cuid())
  email         String
  attemptedCode String
  wasSuccessful Boolean
  ipAddress     String
  timestamp     DateTime @default(now())

  @@map("verification_attempts")
  @@index([email])
}
